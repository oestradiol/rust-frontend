{
    "name": "rust-frontend",
    "version": "0.1.0",
    "license": "UNLICENSED",
    "scripts": {
        "build-tailwind-dev": "cross-env postcss src/app/**/*.css -o src/styles.css",
        "dev": "yarn build-tailwind-dev && trunk serve",

        "build-tailwind-prod": "cross-env NODE_ENV=production postcss src/app/**/*.css -o src/styles.css --minify",
        "build": "yarn build-tailwind-prod && trunk build --release",
        "start": "trunk serve --release"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "cross-env": "^7.0.3",
        "daisyui": "^2.51.3",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "tailwindcss": "^3.2.7"
    }
}